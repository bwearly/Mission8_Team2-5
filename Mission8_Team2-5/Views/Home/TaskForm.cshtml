@model Mission8_Team2_5.Models.ToDoTask

<h1>Task Form</h1>

<!-- Main Form for Creating or Editing a Task -->
<form method="post">
    <!-- Hidden field to store TaskId for editing existing tasks -->
    <input type="hidden" asp-for="TaskId" />

    <!-- Task Name Input -->
    <label asp-for="TaskName">Task:</label>
    <input asp-for="TaskName" class="form-control" />
    <br />

    <!-- Due Date Input -->
    <label asp-for="DueDate">Due Date:</label>
    <input type="date" class="form-control" asp-for="DueDate" />
    <br />

    <!-- Quadrant Selection Dropdown -->
    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant" class="form-control">
        <option value="">Select a priority</option>
        <option value="1">Important / Urgent</option>
        <option value="2">Important / Not Urgent</option>
        <option value="3">Not Important / Urgent</option>
        <option value="4">Not Important / Not Urgent</option>
    </select>
    <br />

    <!-- Category Selection Dropdown -->
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" class="form-control">
        <option value="">Select a Category:</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.Name</option>
        }
    </select>
    <br />

    <!-- Completion Status Dropdown -->
    <label asp-for="Completed">Is this task completed?</label>
    <select asp-for="Completed" class="form-control">
        <option value="">Select a Completion Status</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <!-- Save Task Button -->
    <button class="btn btn-royal" type="submit">Save Task</button>
</form>

<!-- Delete Task Button (Only shown if editing an existing task) -->
@if (Model.TaskId > 0)
{
    <a class="btn btn-danger mt-3" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.TaskId">
        Delete Task
    </a>
}
