@model List<Task>
@{
    ViewData["Title"] = "Time Management Matrix";
}

<div class="container text-center mt-4">
    <h2 class="mb-4">Stephen Covey's Time Management Matrix</h2>

    <div class="row border border-dark">
        <!-- Header Row -->
        <div class="col-6 border-end border-dark fw-bold p-2">Urgent</div>
        <div class="col-6 fw-bold p-2">Not Urgent</div>
    </div>

    <div class="row border border-dark">
        <!-- Important Label -->
        <div class="col-2 border-end border-dark fw-bold d-flex align-items-center justify-content-center p-2" style="writing-mode: vertical-rl; transform: rotate(180deg);">
            Important
        </div>
        <!-- Quadrants 1 & 2 -->
        <div class="col-5 border-end border-dark p-3 bg-light">
            <h5>Quadrant 1</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == 1 && t.Completed == "False"))
            {
                <div><a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id">@task.TaskName</a></div>
            }
        </div>
        <div class="col-5 p-3 bg-light">
            <h5>Quadrant 2</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == 2 && t.Completed == "False"))
            {
                <div><a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id">@task.TaskName</a></div>
            }
        </div>
    </div>

    <div class="row border border-dark">
        <!-- Not Important Label -->
        <div class="col-2 border-end border-dark fw-bold d-flex align-items-center justify-content-center p-2" style="writing-mode: vertical-rl; transform: rotate(180deg);">
            Not Important
        </div>
        <!-- Quadrants 3 & 4 -->
        <div class="col-5 border-end border-dark p-3 bg-light">
            <h5>Quadrant 3</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == 3 && t.Completed == "False"))
            {
                <div><a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id">@task.TaskName</a></div>
            }
        </div>
        <div class="col-5 p-3 bg-light">
            <h5>Quadrant 4</h5>
            @foreach (var task in Model.Where(t => t.Quadrant == 4 && t.Completed == "False"))
            {
                <div><a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id">@task.TaskName</a></div>
            }
        </div>
    </div>
</div>


<div>
    <a class="btn" asp-controller="Home" asp-action="TaskForm">Add Task</a>
</div>
